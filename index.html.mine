<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>MVP Marketplace</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 0;
      background: #f8f9fa;
    }
    header {
      background: #4f46e5;
      color: white;
      padding: 1rem;
      text-align: center;
    }
    .grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: 1rem;
      padding: 1rem;
    }
    .card {
      background: white;
      padding: 1rem;
      border-radius: 12px;
      box-shadow: 0 2px 6px rgba(0,0,0,0.1);
      text-align: center;
      cursor: pointer;
      transition: transform 0.2s;
    }
    .card:hover {
      transform: scale(1.05);
    }
    .modal {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: rgba(0,0,0,0.6);
      display: none;
      justify-content: center;
      align-items: center;
    }
    .modal-content {
      background: white;
      padding: 2rem;
      border-radius: 12px;
      max-width: 500px;
      width: 90%;
      text-align: center;
      position: relative;
    }
    .close {
      position: absolute;
      top: 10px;
      right: 15px;
      font-size: 1.2rem;
      cursor: pointer;
    }
    .btn {
      background: #4f46e5;
      color: white;
      padding: 0.5rem 1rem;
      border: none;
      border-radius: 8px;
      cursor: pointer;
      margin-top: 1rem;
    }
    .btn:hover {
      background: #4338ca;
    }
    footer {
      text-align: center;
      padding: 1rem;
      font-size: 0.9rem;
      color: #555;
    }
  </style>
</head>
<body>
  <header>
    <h1>üè¨ Emoji Mall Marketplace</h1>
    <p><a href="#" style="color: yellow;">Submit your store (Google Form link)</a></p>
  </header>

  <main>
    <div class="grid" id="storeGrid"></div>
  </main>

  <div class="modal" id="storeModal">
    <div class="modal-content">
      <span class="close" id="closeModal">&times;</span>
      <h2 id="modalTitle"></h2>
      <p id="modalTagline"></p>
      <div id="modalVideo"></div>
      <a id="joinBtn" class="btn" target="_blank">Join WhatsApp</a>
    </div>
  </div>

  <footer>
    <p>MVP Marketplace ¬© 2025</p>
  </footer>

  <script>
    async function loadStores() {
      try {
        const res = await fetch('stores.json');
        const stores = await res.json();
        renderStores(stores);
      } catch (e) {
        console.error('Error loading stores.json', e);
      }
    }

    function renderStores(stores) {
      const grid = document.getElementById('storeGrid');
      grid.innerHTML = '';
      stores.forEach(store => {
        const card = document.createElement('div');
        card.className = 'card';
        card.innerHTML = `<h3>${store.emoji} ${store.name}</h3><p>${store.tagline}</p>`;
        card.addEventListener('click', () => openModal(store));
        grid.appendChild(card);
      });
    }

    function openModal(store) {
      document.getElementById('modalTitle').innerText = `${store.emoji} ${store.name}`;
      document.getElementById('modalTagline').innerText = store.tagline;
      const videoDiv = document.getElementById('modalVideo');
      videoDiv.innerHTML = store.video_url ? `<iframe width="100%" height="250" src="${store.video_url}" frameborder="0" allowfullscreen></iframe>` : '';
      const joinBtn = document.getElementById('joinBtn');
      joinBtn.href = store.whatsapp_url;
      joinBtn.innerText = 'Join WhatsApp';
      document.getElementById('storeModal').style.display = 'flex';
    }

    document.getElementById('closeModal').onclick = () => {
      document.getElementById('storeModal').style.display = 'none';
    }

    window.onclick = e => {
      if (e.target === document.getElementById('storeModal')) {
        document.getElementById('storeModal').style.display = 'none';
      }
    }

    loadStores();
  </script>
</body>
  </html>
